{%
  set classes = [
    'node',
    'node--type-' ~ node.bundle|clean_class,
    node.isPromoted() ? 'node--promoted',
    node.isSticky() ? 'node--sticky',
    not node.isPublished() ? 'node--unpublished',
    view_mode ? 'node--view-mode-' ~ view_mode|clean_class,
    'clearfix',
  ]
%}
{{ attach_library('classy/node') }}
<article{{ attributes.addClass(classes) }}>
  <header>
    {{ title_prefix }}
    {{ title_suffix }}
    {% if display_submitted %}
      <div class="node__meta">
        {{ author_picture }}
        <span{{ author_attributes }}>
          {% trans %}Submitted by {{ author_name }} on {{ date }}{% endtrans %}
        </span>
        {{ metadata }}
      </div>
    {% endif %}
  </header>
  
  <div class="page-body">
  {% if node.id == 2 or node.id == 3 or node.id == 10 %}
   <div class="wrapper">
      <div class="flexbox-container">
        <div class="one-thirds">{{ drupal_entity('block', 'seitennavigation', check_access=false) }}</div>
        <div class="two-thirds">{{ content.field_inhaltsbereich }}</div>
       </div>
    </div>
   {% else %}
    {{ content.field_inhaltsbereich }}
   {% endif %}  
       
    </div>

    <div class="clear"></div>

</article>
