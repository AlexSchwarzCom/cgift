{%
  set classes = [
    'paragraph',
    'paragraph--type--' ~ paragraph.bundle|clean_class,
    view_mode ? 'paragraph--view-mode--' ~ view_mode|clean_class,
  ]
%}
{{ attach_library('alex_theme/fullscreenbild-css') }}
{% block paragraph %}
    <div{{ attributes.addClass(classes) }}>
        {% block content %}
         <div class="wrapper">
          <div class="text-absolute absolute">
          	<div class="innerwrapper">
          	{{ content.field_text }}
            {{ content.field_link }}	
            </div>
          </div>
      </div>
      <div class="background-image-overlay"></div>   
      <div class="background-image">{{ content.field_image }}</div>   
         {% endblock %}
   </div>
{% endblock paragraph %}
