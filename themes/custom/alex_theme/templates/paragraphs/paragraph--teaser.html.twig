{%
  set classes = [
    'paragraph',
    'paragraph--type--' ~ paragraph.bundle|clean_class,
    view_mode ? 'paragraph--view-mode--' ~ view_mode|clean_class,
  ]
%}
{{ attach_library('alex_theme/teaser-css') }}
{% block paragraph %}
    <div{{ attributes.addClass(classes) }}>
    {% block content %}
    {{ content.field_gelbe_subline }}
    {{ content.field_headline_h2 }}
     <div class="teaser_bild">
     {{ content.field_image }}
       <a href="{{ content.field_link[0]['#url']  }}" class="absolute"> </a>
    </div>
    {% endblock %}
  </div>
{% endblock paragraph %}
